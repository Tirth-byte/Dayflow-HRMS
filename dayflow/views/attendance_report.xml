<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Report Tree View (Read Only) -->
    <record id="view_dayflow_attendance_report_tree" model="ir.ui.view">
        <field name="name">dayflow.attendance.report.tree</field>
        <field name="model">dayflow.attendance</field>
        <field name="arch" type="xml">
            <tree string="Attendance Report" create="false" edit="false" delete="false" import="false"
                  decoration-muted="status == 'absent'"
                  decoration-success="status == 'present'">
                <field name="employee_id"/>
                <field name="date"/>
                <field name="check_in" widget="float_time"/>
                <field name="check_out" widget="float_time"/>
                <field name="status" widget="badge" decoration-success="status == 'present'" decoration-danger="status == 'absent'"/>
            </tree>
        </field>
    </record>

    <!-- Report Action -->
    <record id="action_dayflow_attendance_report" model="ir.actions.act_window">
        <field name="name">Attendance Report</field>
        <field name="res_model">dayflow.attendance</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_dayflow_attendance_report_tree"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No attendance records found for the report.
            </p>
        </field>
    </record>

    <!-- Reporting Menu (HR Only) -->
    <menuitem id="menu_dayflow_reporting" 
              name="Reporting" 
              parent="menu_dayflow_root" 
              sequence="20" 
              groups="dayflow.group_dayflow_manager"/>
              
    <menuitem id="menu_dayflow_attendance_report" 
              name="Attendance Logs" 
              parent="menu_dayflow_reporting" 
              action="action_dayflow_attendance_report" 
              sequence="1"/>
</odoo>
