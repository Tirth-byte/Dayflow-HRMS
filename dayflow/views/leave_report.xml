<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Report Tree View (Read Only) -->
    <record id="view_dayflow_leave_report_tree" model="ir.ui.view">
        <field name="name">dayflow.leave.report.tree</field>
        <field name="model">dayflow.leave</field>
        <field name="arch" type="xml">
            <tree string="Leave Report" create="false" edit="false" delete="false" import="false"
                  decoration-info="status == 'pending'" 
                  decoration-success="status == 'approved'" 
                  decoration-muted="status == 'rejected'">
                <field name="employee_id"/>
                <field name="leave_type"/>
                <field name="from_date"/>
                <field name="to_date"/>
                <field name="number_of_days" sum="Total Days"/>
                <field name="status" widget="badge" decoration-warning="status == 'pending'" decoration-success="status == 'approved'" decoration-danger="status == 'rejected'"/>
            </tree>
        </field>
    </record>

    <!-- Report Action -->
    <record id="action_dayflow_leave_report" model="ir.actions.act_window">
        <field name="name">Leave Analytics</field>
        <field name="res_model">dayflow.leave</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_dayflow_leave_report_tree"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No leave records found for the report.
            </p>
        </field>
    </record>

    <!-- Menu Item (Under Reporting) -->
    <menuitem id="menu_dayflow_leave_report" 
              name="Leave Analysis" 
              parent="menu_dayflow_reporting" 
              action="action_dayflow_leave_report" 
              sequence="2"/>
</odoo>
