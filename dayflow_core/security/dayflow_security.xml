<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="module_category_dayflow" model="ir.module.category">
            <field name="name">Dayflow HRMS</field>
            <field name="sequence">1</field>
        </record>

        <record id="group_dayflow_user" model="res.groups">
            <field name="name">Employee</field>
            <field name="category_id" ref="module_category_dayflow"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_dayflow_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_category_dayflow"/>
            <field name="implied_ids" eval="[(4, ref('group_dayflow_user')), (4, ref('hr.group_hr_manager'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>
    </data>
</odoo>
